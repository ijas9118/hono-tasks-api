    "hono": "^4.9.10",
    "hono-pino": "^0.10.3",
    "pino": "^10.0.0",
    "postgres": "^3.4.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@types/node": "^20.11.17",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.36.0",
